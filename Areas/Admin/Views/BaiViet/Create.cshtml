@model WEB.Models.BaiViet
@{ ViewData["Title"] = "Thêm bài viết"; }

<h2>Thêm bài viết</h2>

<form asp-action="Create" method="post">
  <div class="mb-3">
    <label asp-for="TieuDe" class="form-label"></label>
    <input asp-for="TieuDe" class="form-control" />
    <span asp-validation-for="TieuDe" class="text-danger"></span>
  </div>

  <div class="mb-3">
    <label asp-for="ChuyenMucID" class="form-label">Chuyên mục</label>
    <select asp-for="ChuyenMucID" class="form-control" asp-items="ViewBag.ChuyenMucID">
      <option value="">-- Chọn chuyên mục --</option>
    </select>
    <span asp-validation-for="ChuyenMucID" class="text-danger"></span>
  </div>

  <div class="mb-3">
    <label asp-for="NoiDung" class="form-label">Nội dung</label>
    <textarea asp-for="NoiDung" rows="8" class="form-control"></textarea>
    <span asp-validation-for="NoiDung" class="text-danger"></span>
  </div>

  <div class="mb-3">
    <label asp-for="HinhAnh" class="form-label">Hình ảnh (URL)</label>
    <input asp-for="HinhAnh" class="form-control" />
  </div>

  <!-- Khối chọn hiển thị trên trang chủ -->
  <div class="card mb-3">
    <div class="card-header fw-semibold">Hiển thị trên trang chủ (Admin)</div>
    <div class="card-body row g-3">
      <div class="col-md-4 form-check">
        <input class="form-check-input" asp-for="HomeCol1" />
        <label class="form-check-label" asp-for="HomeCol1">Khung 1 – Tin tức hoạt động</label>
      </div>
      <div class="col-md-4 form-check">
        <input class="form-check-input" asp-for="HomeCol2" />
        <label class="form-check-label" asp-for="HomeCol2">Khung 2 – Quản lý ứng dụng CNTT</label>
      </div>
      <div class="col-md-4 form-check">
        <input class="form-check-input" asp-for="HomeCol3" />
        <label class="form-check-label" asp-for="HomeCol3">Khung 3 – Cơ sở dữ liệu TNMT</label>
      </div>

      <div class="col-md-3">
        <label asp-for="HomeOrder" class="form-label">Thứ tự trong khung</label>
        <input asp-for="HomeOrder" type="number" class="form-control" min="0" />
        <small class="text-muted">Số nhỏ sẽ hiển thị trước</small>
      </div>
    </div>
  </div>

  <button class="btn btn-primary">Lưu</button>
  <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
