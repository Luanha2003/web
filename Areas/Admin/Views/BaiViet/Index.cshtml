@model WEB.Areas.Admin.ViewModels.BaiVietIndexVM
@{
    ViewData["Title"] = "Quản lý Bài viết";
    string Thumb(string? url) => string.IsNullOrWhiteSpace(url)
        ? "/images/no-image.png"
        : url!;
}

<div class="container-fluid">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h1 class="h3 m-0">Quản lý Bài viết</h1>
        <div class="d-flex gap-2">
            <a class="btn btn-outline-secondary" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                <i class="fa fa-arrow-left me-1"></i> Về Dashboard
            </a>
            <a class="btn btn-primary" asp-area="Admin" asp-controller="BaiViet" asp-action="Create">
                <i class="fa fa-plus me-1"></i> Thêm mới
            </a>
        </div>
    </div>

    <!-- Bộ lọc -->
    <form method="get" class="card shadow-sm border-0 mb-3">
        <div class="card-body row g-3 align-items-end">
            <div class="col-12 col-md-4">
                <label class="form-label">Tìm kiếm</label>
                <input name="q" class="form-control" value="@Model.Search" placeholder="Tiêu đề, nội dung..." />
            </div>
            <div class="col-6 col-md-3">
                <label class="form-label">Chuyên mục</label>
                <select name="catId" class="form-select">
                    <option value="">-- Tất cả --</option>
                    @foreach (var c in Model.Categories)
                    {
                        <option value="@c.Id" selected="@(Model.CategoryId == c.Id)">@c.Name</option>
                    }
                </select>
            </div>
            <div class="col-6 col-md-3">
                <label class="form-label">Sắp xếp</label>
                <select name="sort" class="form-select">
                    <option value="new"   selected="@(Model.Sort=="new")">Mới nhất</option>
                    <option value="views" selected="@(Model.Sort=="views")">Lượt xem</option>
                    <option value="title" selected="@(Model.Sort=="title")">Tiêu đề (A→Z)</option>
                </select>
            </div>
            <div class="col-12 col-md-2 d-flex gap-2">
                <button class="btn btn-dark flex-grow-1"><i class="fa fa-search me-1"></i>Lọc</button>
                <a class="btn btn-outline-secondary" href="@Context.Request.Path">Xoá</a>
            </div>
        </div>
        <div class="card-footer bg-white d-flex align-items-center justify-content-between">
            <div class="text-muted small">
                Hiển thị @Model.Items.Count trên @Model.TotalItems — trang @Model.Page/@Model.TotalPages
            </div>
            <div class="btn-group">
                <a class="btn btn-outline-secondary @(Model.ViewMode=="grid"?"active":"")"
                   asp-area="Admin" asp-controller="BaiViet" asp-action="Index"
                   asp-route-q="@Model.Search" asp-route-catId="@Model.CategoryId"
                   asp-route-sort="@Model.Sort" asp-route-view="grid" asp-route-page="@Model.Page">
                    <i class="fa fa-border-all"></i> Lưới
                </a>
                <a class="btn btn-outline-secondary @(Model.ViewMode=="table"?"active":"")"
                   asp-area="Admin" asp-controller="BaiViet" asp-action="Index"
                   asp-route-q="@Model.Search" asp-route-catId="@Model.CategoryId"
                   asp-route-sort="@Model.Sort" asp-route-view="table" asp-route-page="@Model.Page">
                    <i class="fa fa-table"></i> Bảng
                </a>
            </div>
        </div>
    </form>

    @if (Model.ViewMode == "table")
    {
        <!-- BẢNG -->
        <div class="card shadow-sm border-0">
            <div class="table-responsive">
                <table class="table align-middle mb-0">
                    <thead class="table-light">
                    <tr>
                        <th style="width:72px"></th>
                        <th>Tiêu đề</th>
                        <th style="width:180px">Chuyên mục</th>
                        <th style="width:170px">Ngày đăng</th>
                        <th style="width:90px" class="text-end">Lượt xem</th>
                        <th style="width:180px" class="text-center"></th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var p in Model.Items)
                    {
                        <tr>
                            <td><img src="@Thumb(p.HinhAnh)" class="rounded" style="width:64px;height:48px;object-fit:cover" /></td>
                            <td class="fw-semibold">@p.TieuDe</td>
                            <td><span class="badge text-bg-light">@p.TenChuyenMuc ?? "—"</span></td>
                            <td>@p.NgayDang.ToString("dd/MM/yyyy HH:mm")</td>
                            <td class="text-end">@p.LuotXem</td>
                            <td class="text-center">
                                <div class="btn-group btn-group-sm post-actions">
                                    <a class="btn btn-soft-primary btn-pill px-3"
                                       asp-area="Admin" asp-controller="BaiViet" asp-action="Edit" asp-route-id="@p.BaiVietID">
                                        <i class="fa fa-pen me-1"></i> Sửa
                                    </a>
                                    <a class="btn btn-soft-danger btn-pill px-3"
                                       asp-area="Admin" asp-controller="BaiViet" asp-action="Delete" asp-route-id="@p.BaiVietID">
                                        <i class="fa fa-trash me-1"></i> Xoá
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <!-- LƯỚI -->
        <div class="row g-3">
            @foreach (var p in Model.Items)
            {
                <div class="col-12 col-sm-6 col-lg-4 col-xxl-3">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="ratio ratio-16x9">
                            <img src="@Thumb(p.HinhAnh)" class="card-img-top" style="object-fit:cover" />
                        </div>
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <span class="badge rounded-pill text-bg-light">@p.TenChuyenMuc ?? "—"</span>
                                <span class="small text-muted">@p.NgayDang.ToString("dd/MM/yyyy")</span>
                            </div>

                            <h6 class="card-title mb-2" title="@p.TieuDe">@p.TieuDe</h6>
                            <div class="small text-muted mb-3"><i class="fa fa-eye me-1"></i>@p.LuotXem</div>

                            <!-- Actions: căn GIỮA, nút soft + pill -->
                            <div class="post-actions d-flex justify-content-center gap-2 mt-auto">
                                <a class="btn btn-soft-primary btn-pill btn-sm px-3"
                                   asp-area="Admin" asp-controller="BaiViet" asp-action="Edit" asp-route-id="@p.BaiVietID">
                                    <i class="fa fa-pen me-1"></i> Sửa
                                </a>
                                <a class="btn btn-soft-danger btn-pill btn-sm px-3"
                                   asp-area="Admin" asp-controller="BaiViet" asp-action="Delete" asp-route-id="@p.BaiVietID">
                                    <i class="fa fa-trash me-1"></i> Xoá
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <!-- Phân trang -->
    @if (Model.TotalPages > 1)
    {
        <nav class="mt-3">
            <ul class="pagination">
                @{
                    int start = Math.Max(1, Model.Page - 2);
                    int end = Math.Min(Model.TotalPages, Model.Page + 2);
                }
                <li class="page-item @(Model.Page==1?"disabled":"")">
                    <a class="page-link"
                       asp-area="Admin" asp-controller="BaiViet" asp-action="Index"
                       asp-route-q="@Model.Search" asp-route-catId="@Model.CategoryId"
                       asp-route-sort="@Model.Sort" asp-route-view="@Model.ViewMode"
                       asp-route-page="@(Model.Page-1)">«</a>
                </li>
                @for (int i = start; i <= end; i++)
                {
                    <li class="page-item @(Model.Page==i?"active":"")">
                        <a class="page-link"
                           asp-area="Admin" asp-controller="BaiViet" asp-action="Index"
                           asp-route-q="@Model.Search" asp-route-catId="@Model.CategoryId"
                           asp-route-sort="@Model.Sort" asp-route-view="@Model.ViewMode"
                           asp-route-page="@i">@i</a>
                    </li>
                }
                <li class="page-item @(Model.Page==Model.TotalPages?"disabled":"")">
                    <a class="page-link"
                       asp-area="Admin" asp-controller="BaiViet" asp-action="Index"
                       asp-route-q="@Model.Search" asp-route-catId="@Model.CategoryId"
                       asp-route-sort="@Model.Sort" asp-route-view="@Model.ViewMode"
                       asp-route-page="@(Model.Page+1)">»</a>
                </li>
            </ul>
        </nav>
    }
</div>
