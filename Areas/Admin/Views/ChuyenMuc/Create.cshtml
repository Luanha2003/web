@model WEB.Models.ChuyenMuc
@{ ViewData["Title"] = "Thêm danh mục"; }

<h2>Thêm danh mục</h2>

<form asp-action="Create" method="post">
  <div class="mb-3">
    <label class="form-label">Tên chuyên mục</label>
    <input asp-for="TenChuyenMuc" class="form-control" />
    <span asp-validation-for="TenChuyenMuc" class="text-danger"></span>
  </div>

  <div class="mb-3">
    <label class="form-label">Mô tả</label>
    <textarea asp-for="MoTa" class="form-control" rows="4"></textarea>
  </div>

  <button class="btn btn-primary">Lưu</button>
  <a class="btn btn-secondary" asp-action="Index">Hủy</a>
</form>
