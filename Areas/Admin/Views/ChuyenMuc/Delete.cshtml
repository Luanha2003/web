@model WEB.Models.ChuyenMuc
@{ ViewData["Title"] = "Xóa danh mục"; }

<h2>Xóa danh mục</h2>
<div class="alert alert-warning">
  Bạn có chắc chắn muốn xóa <strong>@Model.TenChuyenMuc</strong>?
</div>

<form asp-action="Delete" method="post">
  <input type="hidden" asp-for="ChuyenMucID" />
  <button class="btn btn-danger">Xóa</button>
  <a class="btn btn-secondary" asp-action="Index">Hủy</a>
</form>
