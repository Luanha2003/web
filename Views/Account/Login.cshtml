@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="auth-wrap">
    <div class="auth-card card shadow-clip border-0">
        <div class="card-body p-4 p-md-5">
            <div class="text-center mb-4">
                <div class="brand-badge mb-2">
                    <i class="fa-solid fa-shield-halved"></i>
                </div>
                <h1 class="h4 fw-bold mb-0">Đăng nhập</h1>
                <div class="text-muted small">Truy cập bảng điều khiển quản trị</div>
            </div>

            @* Hiển thị ValidationSummary nếu có *@
            <div class="text-danger mb-3">
                @Html.ValidationSummary()
            </div>

            <form asp-action="Login" asp-controller="Account" method="post" class="auth-form">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fa-regular fa-envelope"></i></span>
                        <input type="email" name="email" class="form-control" placeholder="you@example.com" required />
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Mật khẩu</label>
                    <div class="input-group" data-password>
                        <span class="input-group-text"><i class="fa-solid fa-lock"></i></span>
                        <input id="pwd" type="password" name="matKhau" class="form-control" placeholder="••••••••" required />
                        <button class="btn btn-outline-secondary" type="button" data-toggle-eye>
                            <i class="fa-regular fa-eye"></i>
                        </button>
                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="remember" name="remember" />
                        <label class="form-check-label" for="remember">Ghi nhớ tôi</label>
                    </div>
                    <a class="small text-decoration-none" href="#">Quên mật khẩu?</a>
                </div>

                <button class="btn btn-auth w-100 mb-3" type="submit">
                    <i class="fa-solid fa-right-to-bracket me-2"></i>Đăng nhập
                </button>

                <div class="text-center small text-muted">
                    Chưa có tài khoản?
                    <a asp-action="Register" asp-controller="Account" class="text-decoration-none">Đăng ký ngay</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
<script>
(function(){
  const btn = document.querySelector('[data-toggle-eye]');
  const pwd = document.getElementById('pwd');
  btn?.addEventListener('click', () => {
    const isPwd = pwd.type === 'password';
    pwd.type = isPwd ? 'text' : 'password';
    btn.innerHTML = isPwd ? '<i class="fa-regular fa-eye-slash"></i>' : '<i class="fa-regular fa-eye"></i>';
  });
})();
</script>

<style>
/* ==== Auth Shared ==== */
.auth-wrap{
  min-height: calc(100vh - 160px);
  display: grid; place-items: center;
  padding: 2rem 1rem;
  background: radial-gradient(1200px 600px at 10% -10%, #eff6ff 0%, transparent 60%),
              radial-gradient(900px 500px at 110% 10%, #ecfeff 0%, transparent 60%);
}
.auth-card{ width:100%; max-width: 520px; border-radius: 1rem; }

.brand-badge{
  width:56px; height:56px; border-radius:14px;
  display:grid; place-items:center;
  background: #eef4ff; color:#0b5ed7; font-size: 1.25rem;
  margin-inline:auto;
}

.btn-auth{
  background: linear-gradient(135deg,#2563eb,#0ea5e9);
  color:#fff; font-weight:700; border:none;
  box-shadow: 0 8px 20px rgba(37,99,235,.15);
}
.btn-auth:hover{ filter:brightness(.95); color:#fff; }

.input-group .input-group-text{ background:#f8fafc; }
</style>
}
