@model WEB.Controllers.PostDetailsVM
@{
    ViewData["Title"] = Model.Post.TieuDe;
}
<div class="row">
    <div class="col-lg-8">
        <article class="mb-4">
            <h2 class="mb-3">@Model.Post.TieuDe</h2>
            <div class="text-muted mb-3">
                <span>Đăng lúc: @Model.Post.NgayDang.ToString("dd/MM/yyyy HH:mm")</span>
                <span class="ms-3">Lượt xem: @Model.Post.LuotXem</span>
            </div>
            @if (!string.IsNullOrWhiteSpace(Model.Post.HinhAnh))
            {
                <img src="@Model.Post.HinhAnh" alt="@Model.Post.TieuDe" class="img-fluid mb-3 rounded" />
            }
            <div style="white-space:pre-wrap">@Model.Post.NoiDung</div>
        </article>
        <a class="btn btn-secondary" asp-action="Index">← Quay lại</a>
    </div>

    <div class="col-lg-4">
        <h5 class="mb-3">Bài viết mới</h5>
        <div class="vstack gap-3">
            @foreach (var p in Model.Latest)
            {
                <div class="d-flex gap-2">
                    @if (!string.IsNullOrWhiteSpace(p.HinhAnh))
                    {
                        <img src="@p.HinhAnh" alt="@p.TieuDe" style="width:80px;height:60px;object-fit:cover" class="rounded" />
                    }
                    <div>
                        <a class="fw-semibold text-decoration-none" asp-action="Details" asp-route-id="@p.BaiVietID">@p.TieuDe</a>
                        <div class="small text-muted">@p.NgayDang.ToString("dd/MM/yyyy")</div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
