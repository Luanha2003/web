@model WEB.Controllers.PostDetailsVM

<div class="row g-3">
    <div class="col-12 col-lg-8">
        <div class="card shadow-sm">
            @if (!string.IsNullOrEmpty(Model.Image))
            {
                <img class="card-img-top" src="@Model.Image" alt="@Model.Title" />
            }
            <div class="card-body">
                <h3 class="fw-bold">@Model.Title</h3>
                <div class="text-muted small mb-3">
                    @Model.Date.ToString("dd/MM/yyyy HH:mm")
                    @if (!string.IsNullOrWhiteSpace(Model.ChuyenMucTen)) { <text> • @Model.ChuyenMucTen</text>; }
                    <text> • @Model.LuotXem lượt xem</text>
                </div>
                <div class="content">
                    @Html.Raw(Model.Content)
                </div>
            </div>
        </div>
    </div>

    <div class="col-12 col-lg-4">
        <div class="card shadow-sm">
            <div class="card-header fw-semibold">Bài viết liên quan</div>
            <div class="list-group list-group-flush">
                @if (Model.Related.Any())
                {
                    foreach (var r in Model.Related)
                    {
                        <a class="list-group-item list-group-item-action"
                           asp-controller="Home" asp-action="Details" asp-route-id="@r.Id">
                            <div class="fw-semibold">@r.Title</div>
                            <div class="text-muted xsmall">@r.Date.ToString("dd/MM/yyyy HH:mm")</div>
                        </a>
                    }
                }
                else
                {
                    <div class="p-3 text-muted small">Chưa có bài liên quan.</div>
                }
            </div>
        </div>
    </div>
</div>
