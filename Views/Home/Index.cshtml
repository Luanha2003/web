@model WEB.Controllers.HomeIndexVM
@{
    ViewData["Title"] = "Trang chủ";
}

<div class="row mb-3">
    <div class="col-md-8">
        <form method="get" class="d-flex gap-2">
            <input type="text" name="q" value="@Model.Query" class="form-control" placeholder="Tìm bài viết..." />
            <select name="categoryId" class="form-select" style="max-width:220px">
                <option value="">-- Tất cả danh mục --</option>
                @foreach (var c in Model.Categories)
                {
                    <option value="@c.ChuyenMucID" selected="@(Model.CurrentCategoryId == c.ChuyenMucID)">
                        @c.TenChuyenMuc
                    </option>
                }
            </select>
            <button class="btn btn-primary">Lọc</button>
        </form>
    </div>
</div>

@if (Model.Items.Count == 0)
{
    <div class="alert alert-info">Chưa có bài viết nào khớp điều kiện.</div>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var x in Model.Items)
        {
            <div class="col">
                @await Html.PartialAsync("~/Views/Shared/_PostCard.cshtml", x)
            </div>
        }
    </div>

    <!-- Phân trang -->
    <nav class="mt-4">
        <ul class="pagination">
            <li class="page-item @(Model.Page <= 1 ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { page = Model.Page - 1, pageSize = Model.PageSize, categoryId = Model.CurrentCategoryId, q = Model.Query })">Trước</a>
            </li>

            @for (var i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.Page ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = i, pageSize = Model.PageSize, categoryId = Model.CurrentCategoryId, q = Model.Query })">@i</a>
                </li>
            }

            <li class="page-item @(Model.Page >= Model.TotalPages ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { page = Model.Page + 1, pageSize = Model.PageSize, categoryId = Model.CurrentCategoryId, q = Model.Query })">Sau</a>
            </li>
        </ul>
    </nav>
}
