@{
    ViewData["Title"] = "Trang Chủ";
}

<div class="news-grid">
    <div class="featured-news">
        <div class="card">
            <img src="https://via.placeholder.com/800x500" class="card-img-top" alt="Featured News Image">
            <div class="card-body">
                <h5 class="card-title">Đây là tiêu đề của bài viết nổi bật nhất, thu hút sự chú ý của người đọc</h5>
