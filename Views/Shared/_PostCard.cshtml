@model WEB.Models.BaiViet
<div class="card h-100 shadow-sm">
    @if (!string.IsNullOrWhiteSpace(Model.HinhAnh))
    {
        <img src="@Model.HinhAnh" class="card-img-top" alt="@Model.TieuDe" />
    }
    <div class="card-body d-flex flex-column">
        <h5 class="card-title">@Model.TieuDe</h5>
        <p class="card-text text-muted" style="display:-webkit-box;-webkit-line-clamp:3;-webkit-box-orient:vertical;overflow:hidden;">
            @Model.NoiDung
        </p>
        <div class="mt-auto d-flex justify-content-between align-items-center">
            <small class="text-secondary">@Model.NgayDang.ToString("dd/MM/yyyy HH:mm")</small>
            <a class="btn btn-outline-primary btn-sm" asp-action="Details" asp-controller="Home" asp-route-id="@Model.BaiVietID">
                Xem chi tiáº¿t
            </a>
        </div>
    </div>
</div>
